<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage  
    x:Class="SpiritualGiftsSurvey.Views.GiftDescription.GiftDescriptionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SpiritualGiftsSurvey.Views.Shared;assembly=SpiritualGiftsSurvey"
    xmlns:vm="clr-namespace:SpiritualGiftsSurvey.Views.GiftDescription"
    xmlns:r="clr-namespace:SpiritualGiftsSurvey.Routing"
    xmlns:c="clr-namespace:SpiritualGiftsSurvey.Views.Controls;assembly=SpiritualGiftsSurvey"
    x:DataType="vm:GiftDescriptionViewModel"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    FlowDirection="{Binding FlowDirection}">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">

            <Image Source="mainpagebackground.jpg"
                   Aspect="Fill"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   Grid.RowSpan="2" />

            <c:NavBar 
                Grid.Row="0" 
                Title="{Binding PageTopic}"
                ShowLeftButton="true"
                ShowRightButton="false"
                LeftCommand="{Binding NavBackCommand}"
                RightCommand="{Binding NavBackCommand}"
                LeftIcon="{StaticResource BackArrow}"
                RightIcon="{StaticResource BackArrowRight}"
                LeftCommandParameter="{x:Static r:Routes.ResultsPage}"
                RightCommandParameter="{x:Static r:Routes.ResultsPage}" />

            <c:LoadingOverlay Grid.Row="0" Grid.RowSpan="3" 
                              IsBusy="{Binding IsLoading}" 
                              Message="{Binding LoadingText}" />
            
            <ScrollView Grid.Row="1">
                <VerticalStackLayout 
                    Padding="{OnIdiom Phone=20, Tablet=40}" 
                    Spacing="{OnIdiom Phone=20, Tablet=30}">

                    <Label Text="{Binding GiftName}"
                           FontSize="{OnIdiom Phone=24, Tablet=32}"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="{Binding GiftDescriptionText}"
                           FontSize="{OnIdiom Phone=16, Tablet=22}"
                           TextColor="Black"
                           LineBreakMode="WordWrap" />

                    <Label Text="{Binding GiftScriptures}"
                           FontSize="{OnIdiom Phone=18, Tablet=26}"
                           TextColor="Black"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</views:BasePage>
