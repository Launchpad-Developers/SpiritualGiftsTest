<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SpiritualGiftsSurvey.Views.Controls.NavBar"
    x:Name="Root">
    
    <Grid 
        ColumnDefinitions="Auto,*,Auto"
        Padding="{OnIdiom Phone=10, Tablet=20}"
        VerticalOptions="Start"
        BackgroundColor="Transparent">

        <!-- Left side: Back or Settings -->
        <ImageButton 
            x:Name="LeftButton"
            Grid.Column="0"
            WidthRequest="{OnIdiom Phone=40, Tablet=70}"
            HeightRequest="{OnIdiom Phone=40, Tablet=70}"
            Margin="{OnIdiom Phone='10,0,0,0', Tablet='20,10,0,0'}"
            BackgroundColor="Transparent"
            Source="{Binding LeftIcon, Source={x:Reference Root}}"
            Command="{Binding LeftCommand, Source={x:Reference Root}}"
            CommandParameter="{Binding LeftCommandParameter, Source={x:Reference Name=Root}}"
            IsVisible="{Binding ShowLeftButton, Source={x:Reference Root}}" />

        <!-- Title -->
        <Label 
            x:Name="TitleLabel"
            Grid.Column="1"
            Text="{Binding Title, Source={x:Reference Root}}"
            FontAttributes="Bold"
            FontSize="{OnIdiom Phone=20, Tablet=36}"
            TextColor="Black"
            HorizontalOptions="{Binding TitleAlignment, Source={x:Reference Root}}"
            VerticalOptions="Center"
            Margin="{OnIdiom Phone='0', Tablet='0,10,0,0'}" />


        <!-- Right Icon (Info) -->
        <ImageButton 
            x:Name="RightButton"
            Grid.Column="2"
            WidthRequest="{OnIdiom Phone=40, Tablet=70}"
            HeightRequest="{OnIdiom Phone=40, Tablet=70}"
            BackgroundColor="Transparent"
            Margin="{OnIdiom Phone='0,0,10,0', Tablet='0,10,20,0'}"
            Source="{Binding RightIcon, Source={x:Reference Root}}"
            Command="{Binding RightCommand, Source={x:Reference Root}}"
            CommandParameter="{Binding RightCommandParameter, Source={x:Reference Name=Root}}"
            IsVisible="{Binding ShowRightButton, Source={x:Reference Root}}" />
    </Grid>
</ContentView>
