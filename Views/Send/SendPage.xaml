<views:BasePage
    x:Class="SpiritualGiftsSurvey.Views.Send.SendPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:SpiritualGiftsSurvey.Views.Controls;assembly=SpiritualGiftsSurvey"
    xmlns:views="clr-namespace:SpiritualGiftsSurvey.Views.Shared;assembly=SpiritualGiftsSurvey"
    xmlns:vm="clr-namespace:SpiritualGiftsSurvey.Views.Send;assembly=SpiritualGiftsSurvey"
    xmlns:models="clr-namespace:SpiritualGiftsSurvey.Models;assembly=SpiritualGiftsSurvey"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    x:DataType="vm:SendViewModel"
    ios:NavigationPage.HideNavigationBarSeparator="true"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    FlowDirection="{Binding FlowDirection}"
    BackgroundColor="{StaticResource ContentBackground}">

    <ContentPage.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="{OnIdiom Phone=16, Tablet=22}" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HeightRequest" Value="{OnIdiom Phone=50, Tablet=70}" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- BACKGROUND -->
            <Image Source="mainpagebackground.jpg"
                   Aspect="Fill"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   Grid.RowSpan="3"
                   IsVisible="{OnPlatform Android=true, iOS=false}" />

            <!-- NAVBAR -->
            <c:NavBar Grid.Row="0" 
                      Title="Reflections"
                      ShowLeftButton="False"
                      ShowRightButton="False" />

            <!-- MAIN FORM -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout 
                    Padding="{OnIdiom Phone='20,20,20,40', Tablet='40,40,40,80'}"
                    Spacing="{OnIdiom Phone=20, Tablet=30}">

                    <!-- Reflections block -->
                    <Border Stroke="Black"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Reflections}"
                                             Spacing="10">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:Reflection">
                                    <Label FontSize="{OnIdiom Phone=14, Tablet=20}"
                                           TextColor="Black"
                                           LineBreakMode="WordWrap">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0}. {1}">
                                                <Binding Path="Number" />
                                                <Binding Path="Question" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>

                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Send Your Results header -->
                    <Label Text="Send Your Results"
                           FontSize="{OnIdiom Phone=20, Tablet=28}"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"
                           TextColor="Black" />

                    <!-- Entry fields -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="{OnIdiom Phone=10, Tablet=20}">
                        <c:UnderlineEntry 
                            Placeholder="{Binding FirstNamePlaceholder}" 
                            Text="{Binding FirstName}" 
                            Style="{StaticResource EntryStyle}" />
                        <c:UnderlineEntry 
                            Grid.Column="1" 
                            Placeholder="{Binding LastNamePlaceholder}" 
                            Text="{Binding LastName}" 
                            Style="{StaticResource EntryStyle}" />
                    </Grid>

                    <Label Text="Optional:" Margin="0,0,0,-20" />

                    <c:UnderlineEntry 
                        Placeholder="{Binding EmailPlaceholder}" 
                        Text="{Binding Email}" 
                        Style="{StaticResource EntryStyle}" />
                </VerticalStackLayout>
            </ScrollView>

            <Button 
                Grid.Row="2"
                Text="{Binding ContinueButtonText}"
                Command="{Binding ContinueCommand}"
                BackgroundColor="{StaticResource EmeraldGreen}"
                TextColor="White"
                HeightRequest="{OnIdiom Phone=50, Tablet=80}"
                Margin="{OnIdiom Phone='80,40', Tablet='160,80'}"
                FontSize="{OnIdiom Phone=24, Tablet=34}"
                FontAttributes="Bold"
                CornerRadius="{OnIdiom Phone=25, Tablet=40}" />

            <ContentView x:Name="ActIndBackground" BackgroundColor="#222222" Opacity="0.65" Grid.RowSpan="3" IsVisible="{Binding IsLoading}" />
            <StackLayout Orientation="Vertical" IsVisible="{Binding IsLoading}" WidthRequest="300" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator IsRunning="True" Color="{StaticResource WhiteSmoke}" />
                <Label Text="{Binding LoadingText}" HorizontalOptions="Center" TextColor="{StaticResource WhiteSmoke}" />
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</views:BasePage>
